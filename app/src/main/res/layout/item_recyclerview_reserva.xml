<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/txtIdReserva"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="ID de la reserva"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtFechaReserva"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Fecha de la reserva"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTotalReserva"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Total de la reserva"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDatosClienteReserva"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Datos cliente"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDireccionClienteReserva"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="DirecciÃ³n del cliente"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btCancelarReserva"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="@string/cancelar_reserva"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="20dip"/>

            <TextView
                android:id="@+id/txtEstadoDeLaReserva"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Estado de la reserva"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>